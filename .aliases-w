uname -o | grep -q Cygwin || return

uname -m | grep -q x86_64 && au=setup-x86_64.exe || au=setup-x86.exe

cb=/dev/clipboard

alias oo=cygstart

au () { cd ~/cygwin && wg -N https://cygwin.com/$au && oo $au -M; }
ev () { wevtutil qe ${1:-system} /c:1000 /f:text /rd:true | tr -d '\r' | tr '\n' _ | sed 's/__Event/\n/g' | sed -r 's/.*Date: ([^_]*).*Level: ([^_]*).*Description: .([^_]*).*/\1 - \2 - \3/' | le; }
ml () { mv "$1" "${1,,}"; }
pk () { pp $1 | cut -c 27-34 | xargs -n 1 taskkill /f /pid; }
pp () { tasklist /v | grep -i $1 | cut -c 1-118,144-182; }
up () { systeminfo | grep 'Boot Time' | tr -s ' '; }
vc () { t=/tmp/vc-$(date +%s).${1:-txt}; cat $cb > $t; vim $t; cat $t > $cb; rr -z $t; }

