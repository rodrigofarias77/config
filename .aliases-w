uname -o | grep -q Cygwin || return

export CYGWIN=winsymlinks:native

cb=/dev/clipboard
cs=~/cygwin/setup-$(uname -m).exe

alias oo=cygstart
alias pw='cygpath -aw'

ag () { h=~/cygwin/history.txt l=/var/log/setup.log; [ -e $h ] || touch $h; [ $2 ] && rz $h && sed -nr 's/^(.{19}).* install .*/\1/p' $l | sort -u | while read i; do echo -n "$i "; sed -nr "s|^$i.* install +([^ ]*).*|\1|p" $l | sort -u | paste -d , -s; done > $h; grep -i $1 $h; }
ai () { oo $cs -M -P $1; }
al () { cygcheck -c -d | grep $1; }
ar () { oo $cs -M -x $1; }
as () { cygcheck -p $1 | grep -i $1; }
au () { [ $1 ] && cd ${cs%/*} && curl -#O https://cygwin.com/${cs##*/}; oo $cs -M; }
cb () { [ -e "$1" ] && cat "$1" > $cb || cat $cb > "$1"; }
dc () { vim -d "$1" <(cat $cb); }
ev () { wevtutil qe ${1:-application} /c:${2:-1000} /f:text /rd:true | tr -d '\r' | tr '\n' @ | sed -r 's/@{2,}/\n/g' | sed -nr 's/.*  Source: ([^@]*)@  Date: ([^@]*).*  Level: ([^@]*).*  Description: @([^@]*).*/\2 - \3 - \1 - \4/p' | le; }
ml () { mv "$1" "${1,,}"; }
pk () { pp $1 | cut -c 27-34 | xargs -rp -n 1 taskkill /f /pid; }
pp () { tasklist /v | grep -i $1 | cut -c 1-118,144-182; }
tb () { tp $1 > $cb; }
up () { td $(wmic os get lastbootuptime | sed -nr 's/^(20..)(..)(..)(..)(..)(..).*/\1-\2-\3T\4:\5:\6/p') today; }
vc () { t=/tmp/vc-$(date +%s).${1:-txt}; cat $cb > $t; vim $t; cat $t > $cb; rr -z $t; }

# vim: filetype=sh
