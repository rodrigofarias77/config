#!/bin/bash

set -e
set -o pipefail

t=~/trash

[ -z "$1" ] && echo -e "$t
-t: trash\n
-k: keep
-s: sudo
-z: zstd\n
-p: purge
-r regex: restore
" && exit 1

[ "$1" = -t ] && t=$2 && shift 2
[ "$1" = -k ] && k=1 && shift
[ "$1" = -s ] && s=sudo && shift
[ "$1" = -z ] && z=--zstd && shift

ry () { read -p '? ' r; [ "$r" = y ]; }

case "$1" in
    -p)
        for i in $(find $t/*.tar -mtime +365 -or -mtime +30 -size +1M); do
            ls -hl $i
            head ${i%.*}.idx
            rm -v ${i%.*}.*
            echo
        done ;;
    -r)
        for i in $(ls -t $t/*.idx); do
            if grep -i "$2" $i; then
                d=$(head -1 $i)
                a=${i%.*}.tar

                echo $d
                ls -hl $a
                ry && cd "$d" && $s tar -x -f $a -Pkv && rm -v ${i%.*}.* && break
            fi
        done ;;
    *)
        b=$t/$(date +%s)

        trap "rm -v $b.*; exit 1" err int

        pwd > $b.idx

        [ $z ] && ! tar --help | grep -q zstd && z=--gzip

        $s tar -c -f $b.tar -Pv $z "$@" | tee -a $b.idx

        [ $k ] || $s rm -fr "$@"

        ls -hl $b.tar ;;
esac
