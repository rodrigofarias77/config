#!/bin/bash

set -e
set -o pipefail

t=~/trash
u=30
y=365

[ -z "$1" ] && echo -e "$t
-t: trash\n
-k: keep
-s: sudo
-w: 7d to purge
-z: compress\n
-p: purge ${u}d
-r regex: restore
" && exit 1

[ "$1" = -t ] && t=$2 && shift 2
[ "$1" = -k ] && k=1 && shift
[ "$1" = -s ] && s=sudo && shift
[ "$1" = -w ] && w=1 && shift
[ "$1" = -z ] && z=--gzip && shift

[ -e $t ] || mkdir -v $t

ry () { read -p '? ' r; [ "$r" = y ]; }

case "$1" in
    -p)
        for i in $(find $t/*.tar -mtime +$y -or -mtime +$u -size +1M | xargs -r ls -rt); do
            ls -hl $i
            head ${i%.*}.idx

            tty -s && { ry || continue; }

            rm -f ${i%.*}.*
        done ;;
    -r)
        for i in $(ls -t $t/*.idx); do
            if grep -i "$2" $i; then
                d=$(head -1 $i)
                a=${i%.*}.tar

                echo $d
                ls -hl $a

                ry || continue

                cd "$d"
                $s tar -x -f $a -Pkv
                rm -f ${i%.*}.*

                break
            fi
        done ;;
    *)
        b=$t/$(date +%s)

        pwd > $b.idx

        [ $z ] && tar --help | grep -q zstd && z=--zstd

        $s tar -c -f $b.tar -Pv $z "$@" | tee -a $b.idx

        [ $w ] && $s touch -d "-$(($u - 7)) days" $b.*

        [ $k ] || $s rm -fr "$@"

        ls -hl $b.tar ;;
esac
