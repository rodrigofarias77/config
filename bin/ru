#!/bin/bash

[ "$1" = -s ] && s=1 && shift
[ "$1" = -u ] && u=1 && shift

[ -z $1 ] && echo -e "Usage: $0 [-s] [-u] mail [xtra]
  -s: sleep before
  -u: apply updates\n
Notify software updates to MAIL.
" && exit 1

n=$(basename $0)
m=$1
x=${@:2}

l=/tmp/$n.log

exec > $l 2>&1

[ $s ] && sleep $((RANDOM%3600))

date
uptime | sed -r "s/.*(up [^,]*).*/\u\1/"

[ -x /usr/bin/dnf ] && d=dnf || d=yum

$d check-update

e=$?

ma () {
    sed -r -e "s/^ +//" -e "s/ {2,}/ /g" -e "s/[-=]{3,}//" $l |
        mail -s "$HOSTNAME: $n $1" $m
}

trap "ma failed; exit 1" err

if [ $e -eq 100 ]; then
    [ $u ] && echo -e "\n--" && $d -y upgrade $x

    ma # ok
fi
