#!/bin/bash

[ "$1" = -s ] && s=1 && shift
[ "$1" = -u ] && u=1 && shift

[ -z $1 ] && echo "Usage: $0 [-s] [-u] mail [xtra]" && exit 1

[ $s ] && sleep $((RANDOM%3600))

n=$(basename $0)
m=$1
x=${@:2}

h=yay
l=/tmp/$n.log

lo () { tail -1000 $l | tr -s " "; }

ma () { mail -s "$(hostname -s): $n $1" $m; }

te () { lo | ma failed; exit 1; }

trap te err

exec > $l 2>&1

date

$h -Sy
echo

if $h -Qu | grep .; then
    [ $u ] && echo -e "\n--" && $h -Su --devel --noconfirm $x

    lo | ma
fi

i=$(file /boot/vmlinuz-linux | sed -r "s/.*version ([^-]*).*/\1/")
r=$(uname -r | sed "s/-.*//")
t=$(uptime | sed -r "s/.*up ([^,]*).*/\1/")

[ $r != $i ] && echo "Kernel $i installed. $r running for $t." | ma
