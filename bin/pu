#!/bin/bash

[ "$1" = -s ] && s=1 && shift
[ "$1" = -u ] && u=1 && shift

[ -z $1 ] && echo "Usage: $0 [-s] [-u] mail [xtra]" && exit 1

[ $s ] && sleep $((RANDOM%3600))

n=$(basename $0)
m=$1
x=${@:2}

h=yay
l=/tmp/$n.log

ma () { tail -500 $l | tr -s " " | mail -s "$(hostname -s): $n $1" $m; }

te () { ma failed; exit 1; }

trap te err

exec > $l 2>&1

date
uptime | sed -r "s/.*(up [^,]*).*/\u\1/"

$h -Sy
echo

if $h -Qu | grep .; then
    [ $u ] && echo -e "\n--" && $h -Su --devel --noconfirm $x

    ma
fi
