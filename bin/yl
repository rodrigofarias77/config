#!/bin/bash

[ -z "$4" ] && echo "Usage: $0 live secs base mail" && exit 1

u=$1
s=$2
b=$3
m=$4

d=$(date +%s)

l=/tmp/yl-$d.log

exec > $l 2>&1

te () { tail $l | mail -s "$HOSTNAME: $0" $m; }

trap te err

date

e=$(($d + $s))

for i in {0..9}; do
    [ $d -ge $e ] && break

    timeout -s SIGINT $(($e - $d)) yt-dlp -f b -o $b-$d.mp4 $u

    sleep 60

    d=$(date +%s)
done
