#!/bin/bash

[ -z "$4" ] && echo "Usage: $0 live secs base mail" && exit 1

u=$1
s=$2
b=$3
m=$4

d=$(date +%s)

l=/tmp/yl-$d.log

exec > $l 2>&1

te () { tail $l | mail -s "$HOSTNAME: $0" $m; }

trap te err int

date

e=$(($d + $s))

for i in {1..5}; do
    [ $d -ge $e ] && break

    timeout $(($e - $d)) yt-dlp -o $b-$d.mp4 --ignore-config --no-part $u

    sleep 60

    d=$(date +%s)
done
