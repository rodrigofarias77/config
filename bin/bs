#!/bin/bash

[ -z $4 ] && echo 'subvolume dir keep mail' && exit 1

s=$1
d=$2
k=$3
m=$4

n=$(date +%y%m%d-%H%M%S)

l=/tmp/$(basename $0)-$n.log

exec > $l 2>&1

te () { mail -s "$HOSTNAME: $0 failed" $m < $l; exit 1; }

trap te err

cd $d

btrfs subvolume snapshot -r $s $n

ls | head -n -$k | xargs -r btrfs subvolume delete
