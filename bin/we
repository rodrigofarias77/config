#!/bin/bash

[ -z $1 ] && echo sbrf && exit 1

i=${1^^}

cd /tmp

l=$i.TXT
u=https://tgftp.nws.noaa.gov/data/observations/metar/stations/$l

[ -s $l ] && let d=$(date -u +%s)-$(date -d "$(head -1 $l)" -u +%s) || d=9999

[ $d -gt 3600 ] && curl -Os $u

[ -s $l ] && tail -1 $l | perl -pe 's/.*KT.*? ([-+]?[A-Z]{2,}).*? (M?[0-9]+)\/.*/$1 $2C/' || echo '?'
