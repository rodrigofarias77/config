[ -x /usr/bin/yum ] || return

[ -x /usr/bin/dnf ] && c=dnf || c=yum

[ -x /usr/bin/unbuffer ] && u='unbuffer '

[ $UID != 0 ] && s='sudo '

alias ac="$s$c clean all"
alias ai="$s$c install"
alias an="$c -C info"
alias ar="$s$c autoremove"
alias au="$s$c upgrade"

_l () { grep '  ' | sort | sed 's/  \+/ /g'; }

al () { $u$c list installed "*$1*" | _l; }
as () { l=$($u$c -C list "*$1*" | _l); { grep @ <<< "$l" && echo; grep -v @ <<< "$l"; } | le -X; }

# vim: filetype=sh
